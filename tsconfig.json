{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "./types"],
    "target": "esnext",
    "moduleResolution": "Node",
    "types": ["React", "react-dom", "node", "jquery"],
    "jsx": "preserve",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "build/",
    "baseUrl": "./src/",
    "paths": {
      "Util/*": ["./Util/*"],
      "types/*": ["../types/*"]
    }
  }
}